RUN yum -y install unzip && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install util-linux-ng && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install xorg-x11-utils && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install xorg-x11-xauth && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install openssl && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install oracle-database-preinstall-21c && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all

RUN $INSTALL_DIR/$SETUP_LINUX_FILE && \
    chown -R oracle:oinstall $ORACLE_BASE /home/oracle && \
    sed -i -e 's/\(oracle\s\+hard\s\+nofile\)/# \1/' /etc/security/limits.d/oracle-database-preinstall-21c.conf

RUN wget -q $INSTALL_FILE_1 && \ 
	yum -y localinstall $INSTALL_FILE_2 && \
    rm -rf /var/cache/yum && \
    rm -rf /var/tmp/yum-* && \ 
	yum clean all && \
    rm -f $INSTALL_FILE_2 && \
    rm -f $REMOVE_FILE_1 && \
    rm -f $REMOVE_FILE_2 && \
    rm -f $REMOVE_FILE_3 && \
    rm -f $REMOVE_FILE_4 && \
    rm -rf $REMOVE_DIR_1 && \
    rm -rf $REMOVE_DIR_2

RUN wget -q $INSTALL_FILE_1 && \ 
	yum -y localinstall $INSTALL_FILE_2 && \
    rm -rf /var/cache/yum && \
    rm -rf /var/tmp/yum-* && \ 
	yum clean all && \
    rm -f $INSTALL_FILE_2 && \
    rm -f $REMOVE_FILE_1 && \
    rm -f $REMOVE_FILE_2 && \
    rm -f $REMOVE_FILE_3 && \
    rm -f $REMOVE_FILE_4 && \
    rm -rf $REMOVE_DIR_1

RUN wget -q $INSTALL_FILE_1 && \ 
	yum -y localinstall $INSTALL_FILE_2 && \
    rm -rf /var/cache/yum && \
    rm -rf /var/tmp/yum-* && \ 
	yum clean all && \
    rm -f $INSTALL_FILE_2 && \
    rm -f $REMOVE_FILE_1 && \
    rm -f $REMOVE_FILE_2 && \
    rm -f $REMOVE_FILE_3 && \
    rm -f $REMOVE_FILE_4

RUN rm -rf $ORACLE_HOME && \
	yum -y remove $PACKAGE_NAME && \
	wget -q $INSTALL_FILE_1 && \ 
    yum -y localinstall $INSTALL_FILE_2 && \
    rm -rf /var/cache/yum && \
    rm -rf /var/tmp/yum-* && \ 
	yum clean all && \
    rm -f $INSTALL_FILE_2 && \
    rm -f $REMOVE_FILE_1 && \
    rm -f $REMOVE_FILE_2 && \
    rm -f $REMOVE_FILE_3

RUN rm -rf $ORACLE_HOME && \
	yum -y remove $PACKAGE_NAME && \
	wget -q $INSTALL_FILE_1 && \ 
    yum -y localinstall $INSTALL_FILE_2 && \
    rm -rf /var/cache/yum && \
    rm -rf /var/tmp/yum-* && \ 
	yum clean all && \
    rm -f $INSTALL_FILE_2 && \
    rm -f $REMOVE_FILE_1 && \
    rm -f $REMOVE_FILE_2

RUN rm -rf $ORACLE_HOME && \
	yum -y remove $PACKAGE_NAME && \
	wget -q $INSTALL_FILE_1 && \ 
    yum -y localinstall $INSTALL_FILE_2 && \
    rm -rf /var/cache/yum && \
    rm -rf /var/tmp/yum-* && \ 
	yum clean all && \
    rm -f $INSTALL_FILE_2 && \
    rm -f $REMOVE_FILE_1

RUN rm -rf $ORACLE_HOME && \
	yum -y remove $PACKAGE_NAME && \
	wget -q $INSTALL_FILE_1 && \ 
    yum -y localinstall $INSTALL_FILE_2 && \
    yum -y remove expect && \
    rm -rf /var/cache/yum && \
    rm -rf /var/tmp/yum-* && \ 
	yum clean all && \
    rm -f $INSTALL_FILE_2

   
RUN mv $INSTALL_DIR/$CONF_FILE /etc/sysconfig/ 

RUN cd $HOME && \
    rm -rf $INSTALL_DIR
    
RUN $ORACLE_BASE/oraInventory/orainstRoot.sh && \
    $ORACLE_HOME/root.sh

USER oracle
WORKDIR /home/oracle

# Add a bashrc file to capitalize ORACLE_SID in the environment
RUN echo 'ORACLE_SID=${ORACLE_SID:-ORCLCDB}; export ORACLE_SID=${ORACLE_SID^^}' > .bashrc

HEALTHCHECK --interval=1m --start-period=5m --timeout=30s \
   CMD "$ORACLE_BASE/$CHECK_DB_FILE" >/dev/null || exit 1

CMD exec $ORACLE_BASE/$RUN_FILE
