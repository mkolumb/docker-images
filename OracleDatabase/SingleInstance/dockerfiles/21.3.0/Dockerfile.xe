	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install libgcc && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install libstdc++ && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install make && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install module-init-tools && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install net-tools && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install nfs-utils && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install openssh-clients && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install pam && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install policycoreutils-python && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install procps && \ 
