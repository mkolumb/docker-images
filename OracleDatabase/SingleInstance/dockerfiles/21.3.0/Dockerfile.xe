	yum clean all
RUN yum -y install glibc && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install glibc-devel && \ 
	rm -rf /var/cache/yum && \ 
	rm -rf /var/tmp/yum-* && \ 
	yum clean all
RUN yum -y install initscripts && \ 
